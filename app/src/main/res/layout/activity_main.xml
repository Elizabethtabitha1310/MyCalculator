<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/txtDisplay"
            android:gravity="end"
            android:textColor="@color/Numberbtn"
            android:textSize="40sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/txtResults"
            android:gravity="end"
            android:textColor="@color/Numberbtn"
            android:textSize="40sp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAutoRotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="58dp"
                android:maxHeight="48dp"
                android:scaleType="centerInside"
                android:src="@drawable/autorotate"
                app:tint="@color/white"/>

            <ImageView
                android:id="@+id/imgCurrencyConverter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="end"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:scaleType="centerInside"
                android:src="@drawable/currency_converter"
                app:tint="@color/white" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:padding="8dp"
            tools:listitem="@layout/item_history"/>

    <!-- Scientific buttons layout, initially hidden -->
    <LinearLayout
        android:id="@+id/scientificButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSin"
                style="@style/Actionbtn"
                android:text="sin"
                android:textColor="#7B1FA2" />

            <TextView
                android:id="@+id/txtCos"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="cos"/>

            <TextView
                android:id="@+id/txtTan"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="tan"/>

            <TextView
                android:id="@+id/txtLog"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="log"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLn"
                style="@style/Actionbtn"
                android:text="ln"
                android:textColor="#7B1FA2" />

            <TextView
                android:id="@+id/txtExp"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="exp"/>

            <TextView
                android:id="@+id/txtPi"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="Ï€"/>

            <TextView
                android:id="@+id/txtE"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="e"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtClear"
        style="@style/Actionbtn"
        android:text="C"
        android:textColor="#7B1FA2" />

    <TextView
        android:id="@+id/txtOpenBracket"
        style="@style/Actionbtn"
        android:textColor="#7B1FA2"
        android:text="("/>
    <TextView
        android:id="@+id/txtClosedBracket"
        style="@style/Actionbtn"
        android:textColor="#7B1FA2"
        android:text=")"/>
    <TextView
        android:id="@+id/txtDivide"
        style="@style/Actionbtn"
        android:textColor="#7B1FA2"
        android:text="/"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSeven"
            style="@style/Numberbtn"
            android:text="7"/>

        <TextView
            android:id="@+id/txtEight"
            style="@style/Numberbtn"
            android:text="8"/>
        <TextView
            android:id="@+id/txtNine"
            style="@style/Numberbtn"
            android:text="9"/>
        <TextView
            android:id="@+id/txtMutiply"
            style="@style/Actionbtn"
            android:textColor="#7B1FA2"
            android:text="*"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFour"
                style="@style/Numberbtn"
                android:text="4"/>

            <TextView
                android:id="@+id/txtFive"
                style="@style/Numberbtn"
                android:text="5"/>
            <TextView
                android:id="@+id/txtSix"
                style="@style/Numberbtn"
                android:text="6"/>

            <TextView
                android:id="@+id/txtAdd"
                style="@style/Actionbtn"
                android:text="+"
                android:textColor="#7B1FA2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOne"
                style="@style/Numberbtn"
                android:text="1"/>

            <TextView
                android:id="@+id/txtTwo"
                style="@style/Numberbtn"
                android:text="2"/>
            <TextView
                android:id="@+id/txtThree"
                style="@style/Numberbtn"
                android:text="3"/>
            <TextView
                android:id="@+id/txtSubtract"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPercentage"
                style="@style/Numberbtn"
                android:text="%"/>

            <TextView
                android:id="@+id/txtZero"
                style="@style/Numberbtn"
                android:text="0"/>
            <ImageView
                android:id="@+id/imgBackspace"
                style="@style/Numberbtn"
                android:src="@drawable/backspace"
                android:scaleType="center" />
            <TextView
                android:id="@+id/txtEqual"
                style="@style/Actionbtn"
                android:textColor="#7B1FA2"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>